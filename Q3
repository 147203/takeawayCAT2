i)
#include <iostream>

using namespace std;

int main()
{
    int n;
    
    cout<<"Enter an interger:";
    cin>>n;
    
    if 
    { n%2==0;
        cout<<n<<"is even";
        else
        cout<<n<<"is odd";
    }

    return 0;



ii)
#include <iostream>

using namespace std;

int main()
{
    int num1,num2,num3;
    cout<<"enter three numbers:";
    cin>>num1>>num2>>num3;
    
    //check if num1 is greatest
    if{
        num1>=num2 && num1>=num3)
        cout<<"Largest num:"<<num1;
        
    //check if num2 is the Largest
    else if{
        num2>=num1&&num2>=num3)
        cout<<"Largest num:"<<num2;
        
    //if neither num1 nor num2 is the largest num3 is
    else(
        cout<<"largest num;" <<num3)
        
    }
    }
    
    return 0;
}
